<%= form_for(@favorite, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @favorite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@favorite.errors.count, "error") %> prohibited this favorite from being saved:</h2>

      <ul>
      <% @favorite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address %>
    <div class="controls">
      <%= f.text_field :address %>
      <p class="help-block">Street, city, and zip. All on one line, like an animal.</p>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :website %>
    <div class="controls">
      <%= f.text_field :website %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description %>
    <div class="controls">
      <%= f.text_area :description, :rows => 3 %>
      <p class="help-block">What it is and why is it awesome?</p>
    </div>
  </div>

  <% unless @favorite.new_record? %>
    <div class="control-group">
      <%= f.label :approved %>
      <div class="controls">
        <%= f.check_box :approved %>
      </div>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
